<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/margin_5_dp"
    android:layout_marginVertical="@dimen/margin_5_dp"
    android:background="@color/white_color"
    android:orientation="vertical"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/margin_10_dp">

        <ImageView
            android:id="@+id/movie_poster_image_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/poster_image_size"
            android:scaleType="centerCrop"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/movie_title_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_5_dp"
            android:textColor="@color/primary_text_color"
            android:textSize="@dimen/font_size_15_sp"
            android:textStyle="bold"
            tools:text="Iron Man" />

    </LinearLayout>

</androidx.cardview.widget.CardView>